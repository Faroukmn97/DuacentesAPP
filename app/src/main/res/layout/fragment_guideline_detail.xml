<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.learning.GuidelineDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutSectionguidelined1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearheaderguidelinedetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/tittleguidelinedetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pauta"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/linearyoutimageheaderguidelinecontainer"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:gravity="center">


                                <LinearLayout
                                    android:id="@+id/linearyoutimageheaderguideline"
                                    android:layout_width="240dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/linearheaderguidelinedetail"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/cardlearning">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/imgheaderguideline"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter"
                                        app:shapeAppearanceOverlay="@style/roundimageview"
                                        app:srcCompat="@drawable/escudouteq" />


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSectionguidelined2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutSectionguidelined1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lineartittledescriptionguidelinedetail1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/nametittledescriptionguidelinedetail1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="¿En qué consiste?"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearTitledescriptionguidelinedetail1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:layout_below="@+id/lineartittledescriptionguidelinedetail1"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/descriptionguidelinedetail1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textStart"
                                android:text="Texto informativo de la pauta en que consiste"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/linearTitledescriptionguidelinedetail1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:gravity="right">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnvoz"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:drawableStart="@drawable/ic_baseline_voice"
                                android:drawablePadding="1dp"
                                android:padding="10dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSectionguidelined3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutSectionguidelined2"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lineartittledescriptionguidelinedetail2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/nametittledescriptionguidelinedetail2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="¿Cómo se puede llevar a la práctica?"
                                android:textAlignment="textStart"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearTitledescriptionguidelinedetail2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:layout_below="@+id/lineartittledescriptionguidelinedetail2"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/descriptionguidelinedetail2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textStart"
                                android:text="Texto informativo de la pauta de como puede llevarse"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/linearTitledescriptionguidelinedetail2"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:gravity="right">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnvoz2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"

                                android:drawableStart="@drawable/ic_baseline_voice"
                                android:drawablePadding="1dp"
                                android:padding="10dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSectionguidelined4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutSectionguidelined3"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textvbuttonguidelinedetail"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonlearningrepresentation"
                                android:drawableEnd="@drawable/ic_baseline_east"
                                android:drawablePadding="10dp"
                                android:padding="10dp"
                                android:text="Puntos de verificación"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>