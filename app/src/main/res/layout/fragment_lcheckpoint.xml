<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LcheckpointFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/idlinearguide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- <LinearLayout
                     android:id="@+id/linearLayoutbuttonlcheckpoint"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <Button
                         android:id="@+id/returnbtnischeckpoint"
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:background="@drawable/ic_volver_atras" />
                 </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/linearLayoutprincipleguidecheck"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <ImageView
                            android:id="@+id/Imageprincipleguidecheck"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:id="@+id/linearLayoutcheck"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@+id/Imageprincipleguidecheck"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/namepguidelinecheck"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Principio"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayoutnameguidelinecheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tittlepguideline"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tittlepguideline"
                        android:gravity="center"
                        android:text="Pauta:"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nameguidelinecheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tittlepguideline"
                        android:justificationMode="inter_word"
                        android:text="namepauta"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:text="Seleccione un punto de verificaciÃ³n."
                        android:textSize="18sp"></TextView>
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/LRViewcheckpoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp" />

                <LinearLayout
                    android:id="@+id/idbuttonslcheckpoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayoutbuttonprincipleall"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textvbuttonguidelinecheck"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/buttonlearningrepresentation"
                            android:padding="10dp"
                            android:text="Pautas"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textvbuttonprinciplecheck"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/buttonlearning"
                            android:drawableEnd="@drawable/learning_32"
                            android:drawablePadding="1dp"
                            android:padding="10dp"
                            android:text="Principios"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</FrameLayout>
