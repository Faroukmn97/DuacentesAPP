<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:andriod="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
andriod:id="@+id/cv"
andriod:layout_width="match_parent"
andriod:layout_height="wrap_content"
andriod:animateLayoutChanges="true"
app:cardCornerRadius="25dp"
app:cardElevation="6dp"
app:cardUseCompatPadding="true">

<LinearLayout
    andriod:id="@+id/idlinearlayoucardview"
    andriod:layout_width="match_parent"
    andriod:layout_height="wrap_content"
    andriod:animateLayoutChanges="true"
    andriod:orientation="vertical">
    <RelativeLayout
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:orientation="horizontal"
        andriod:padding="6dp">

        <LinearLayout
            andriod:id="@+id/linearLayoutGuideline"
            andriod:layout_width="match_parent"
            andriod:layout_height="wrap_content"
            andriod:gravity="center_horizontal">
            <TextView
                andriod:id="@+id/idguideline"
                andriod:layout_width="match_parent"
                andriod:layout_height="wrap_content"
                andriod:layout_marginBottom="10dp"
                andriod:gravity="center"
                andriod:text="idpauta"
                andriod:textColor="@android:color/black"
                andriod:textSize="20sp"
                andriod:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            andriod:id="@+id/linearyoutimageguidelinecontainer"
            andriod:layout_width="match_parent"
            andriod:layout_height="220dp"
            andriod:layout_below="@+id/linearLayoutGuideline"
            andriod:gravity="center">

            <LinearLayout
                andriod:id="@+id/linearyoutimageguideline"
                andriod:layout_width="240dp"
                andriod:layout_height="wrap_content"
                andriod:layout_marginStart="10dp"
                andriod:layout_marginTop="10dp"
                andriod:layout_marginEnd="10dp"
                andriod:layout_marginBottom="10dp"
                andriod:background="@drawable/cardlearning">

                <com.google.android.material.imageview.ShapeableImageView
                    andriod:id="@+id/ImageGuideline"
                    andriod:layout_width="match_parent"
                    andriod:layout_height="wrap_content"
                    andriod:layout_centerInParent="true"
                    andriod:adjustViewBounds="true"
                    andriod:scaleType="fitCenter"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:srcCompat="@drawable/escudouteq" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            andriod:id="@+id/linearLayoutresource"
            andriod:layout_width="match_parent"
            andriod:layout_height="wrap_content"
            andriod:layout_below="@+id/linearyoutimageguidelinecontainer"
            andriod:orientation="vertical">

            <TextView
                andriod:id="@+id/nameguideline"
                andriod:layout_width="match_parent"
                andriod:layout_height="wrap_content"
                andriod:layout_marginBottom="20dp"
                andriod:gravity="center"
                andriod:text="Name"
                andriod:textColor="@android:color/black"
                andriod:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            andriod:id="@+id/linearLayoutbuttonguideline"
            andriod:layout_width="match_parent"
            andriod:layout_height="wrap_content"
            andriod:layout_below="@+id/linearLayoutresource"
            andriod:gravity="right"
            andriod:orientation="vertical"
            andriod:padding="4dp">

            <TextView
                andriod:id="@+id/textvbuttonguideline"
                andriod:layout_width="170dp"
                andriod:layout_height="match_parent"
                andriod:background="@drawable/buttonlearningrepresentation"
                andriod:drawableEnd="@drawable/ic_baseline_east"
                andriod:drawablePadding="1dp"
                andriod:padding="10dp"
                andriod:text="Más información"
                andriod:textColor="@color/white"
                andriod:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>